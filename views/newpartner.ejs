<!DOCTYPE html>
<html>
  <%- include('partials/head.ejs', { title: 'Phonebook - New partner' }) %>
  <body onload="loadPartnersTable()">
    <%- include('partials/navbar.ejs') %>

    <div id="content">
      <h1><%= title %></h1>

      <script src="/index.js"></script>

      <form id="newPartnerForm" onsubmit="postPartner(event)">
        <p>Firstname: <input type="text" name="fname" required/></p>
        <p>Lastname: <input type="text" name="lname" required/></p>
        <p>Phone number: <input type="text" name="phonenum" required/></p>
        <p><input type="submit" value="Submit" /></p>
      </form> 
    
    <% if (error == true) { %>
        <h3 class="err">Failed to validate form</h3>
    <% } %>

    <% if (completed == true) { %>
        <h3>Partner added succesfully</h3>
    <% } %>


    </div>
  </body>
  <%- include('partials/footer.ejs') %>
</html>
